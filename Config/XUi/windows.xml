<config>
	<remove xpath="/windows/window[@name='windowTargetBar']"/>
	<append xpath="/windows">
		<window name="windowTargetBar" controller="TargetBar" visibility="always">
			<rect pos="-200,-85" width="400" height="8" visible="{visible}">
				<sprite depth="1" color="[mediumGrey]" sprite="menu_empty2px" type="sliced" globalopacity="false" />
				<sprite depth="9" color="[black]" sprite="menu_empty2px" type="sliced" globalopacity="false" fillcenter="false" />
				<filledsprite depth="5" color="200,0,0,180" type="filled" width="400" fill="{fill}" globalopacity="false" />
			</rect>
		</window>
	</append>
</config>
